# Environment Configuration
ENVIRONMENT=development
DEBUG=false

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_KEY=your-azure-openai-key
AZURE_OPENAI_DEPLOYMENT=gpt-4o
AZURE_OPENAI_API_VERSION=2024-02-01

# Azure Cosmos DB Configuration
COSMOS_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
COSMOS_KEY=your-cosmos-key
COSMOS_DATABASE=leadgen
COSMOS_CONTAINER=leads

# Azure Blob Storage Configuration
STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your-storage-account;AccountKey=your-key;EndpointSuffix=core.windows.net
STORAGE_CONTAINER=lead-data

# Azure Key Vault (Optional)
KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# Data Source API Keys
SERPER_API_KEY=your-serper-api-key
HUNTER_API_KEY=your-hunter-api-key
CLEARBIT_API_KEY=your-clearbit-api-key
SAM_GOV_API_KEY=your-sam-gov-api-key

# Agent Configuration
MAX_RESULTS_PER_AGENT=50
ENABLE_BANKING_AGENT=true
ENABLE_INSURANCE_AGENT=true
ENABLE_ENERGY_AGENT=true
ENABLE_GOVERNMENT_AGENT=true

# Validation Criteria
MIN_EMPLOYEE_COUNT=100
TARGET_INDUSTRIES=banking,insurance,energy,government

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Caching
CACHE_TTL_SECONDS=3600
